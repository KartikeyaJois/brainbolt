# scripts/loadtest_config.env
# BrainBolt load test configuration

BASE_URL="${BASE_URL:-http://localhost:3001}"

# Load shape
CONCURRENT_USERS=10
DURATION_SECONDS=60

# Request mix (percentages must sum to 100)
# next, answer, metrics, leaderboard/score, leaderboard/streak
PCT_NEXT=35
PCT_ANSWER=35
PCT_METRICS=15
PCT_LEADERBOARD_SCORE=8
PCT_LEADERBOARD_STREAK=7

# User ID range (must exist in DB or you'll get 404s)
USER_ID_MIN=1
USER_ID_MAX=50

# Results output
RESULTS_DIR="${RESULTS_DIR:-./loadtest_results}"
